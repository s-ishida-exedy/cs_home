      </assemblies>
    </compilation>
    <pages controlRenderingCompatibilityVersion="4.0"/>
    <customErrors mode="Off"/>
    <!--フォーム認証用-->
    <authentication mode="Forms">
      <forms name="Insider.NET" loginUrl="login.aspx" protection="All" timeout="300" slidingExpiration="true"/>
    </authentication>
    <authorization>
      <deny users="?"/>
      <allow users="*"/>
