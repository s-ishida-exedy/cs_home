  -->
  <connectionStrings>
    <add name="EXPDBConnectionString" connectionString="Data Source=KBHWPM02;Initial Catalog=EXPDB;Persist Security Info=True;User ID=sa;Password=expdb-manager" providerName="System.Data.SqlClient"/>
    <add name="KBHWPA85ConnectionString" connectionString="Data Source=KBHWPA85;Initial Catalog=BPTB001;Persist Security Info=True;User ID=ado_bptb001;Password=ado_bptb001" providerName="System.Data.SqlClient"/>
  </connectionStrings>
  <system.web>
    <compilation debug="true" targetFramework="4.5">
      <assemblies>
        <!-- ClosedXML使用 -->
        <add assembly="WindowsBase, Version=4.0.0.0, Culture=neutral, PublicKeyToken=31BF3856AD364E35"/>
        <!-- ClosedXML使用 -->
        <!-- MailKit使用 -->
        <add assembly="System.Net.Http, Version=4.0.0.0, Culture=neutral, PublicKeyToken=B03F5F7F11D50A3A"/>
        <add assembly="System.Security, Version=4.0.0.0, Culture=neutral, PublicKeyToken=B03F5F7F11D50A3A"/>
